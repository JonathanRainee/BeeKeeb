<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PostDetailActivity">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/profileIV"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:circularflow_radiusInDP="10dp"
        android:src="@drawable/logo1"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/authorTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="author"
        android:textSize="20dp"
        android:paddingTop="10dp"
        android:layout_marginLeft="5dp"
        app:layout_constraintStart_toEndOf="@id/profileIV"
        app:layout_constraintTop_toTopOf="@id/profileIV"/>

    <ImageView
        android:id="@+id/deleteIV"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_baseline_delete_24"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"/>


    <TextView
        android:id="@+id/titleTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="4dp"
        android:text="title"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profileIV" />

    <TextView
        android:id="@+id/threadTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:paddingLeft="20dp"
        android:text="ini threaddddddddddddddddddddddddddddd"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleTV" />

    <ImageView
        android:id="@+id/mediaIV"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/logo1"
        android:layout_marginLeft="20dp"
        android:paddingBottom="5dp"
        app:layout_constraintTop_toBottomOf="@id/threadTV"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/likeTV"
        android:layout_width="20dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@id/mediaIV"
        app:layout_constraintStart_toStartOf="parent"
        android:text="0"
        android:textSize="24dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"/>

    <ImageView
        android:id="@+id/likeIV"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_baseline_favorite_border_24"
        app:layout_constraintTop_toBottomOf="@+id/mediaIV"
        app:layout_constraintLeft_toRightOf="@id/likeTV"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="2dp"/>

    <ImageView
        android:id="@+id/likedIV"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_baseline_favorite_24"
        app:layout_constraintTop_toBottomOf="@+id/mediaIV"
        app:layout_constraintLeft_toRightOf="@id/likeTV"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="2dp"
        android:tint="@color/cancel_red"/>

    <TextView
        android:id="@+id/separator"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:text=""
        android:layout_marginTop="5dp"
        android:layout_marginLeft="2dp"
        app:layout_constraintTop_toBottomOf="@+id/mediaIV"
        app:layout_constraintLeft_toRightOf="@id/likeTV"/>


    <TextView
        android:id="@+id/qnaTV"
        android:layout_width="20dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@id/mediaIV"
        app:layout_constraintLeft_toRightOf="@id/separator"
        android:text="0"
        android:textSize="24dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"/>

    <ImageView
        android:id="@+id/qnaIV"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_baseline_question_answer_24"
        app:layout_constraintTop_toBottomOf="@+id/mediaIV"
        app:layout_constraintLeft_toRightOf="@id/qnaTV"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="2dp"/>




</androidx.constraintlayout.widget.ConstraintLayout>