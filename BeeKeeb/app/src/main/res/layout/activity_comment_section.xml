<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CommentSectionActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/questionRV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        app:layout_constraintBottom_toTopOf="@+id/etComment"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etComment"
        android:layout_width="345dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:hint= "@string/inpComment"
        android:background="@drawable/textfield_bg"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="20dp"
        android:layout_marginRight="10dp"
        app:layout_constraintRight_toRightOf="@id/sendBtn"
        android:paddingLeft="10dp"/>

    <Button
        android:id="@+id/sendBtn"
        android:layout_width="50dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/etComment"
        android:drawableStart="@drawable/ic_baseline_send_24"
        android:background="@drawable/textfield_bg"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="20dp"
        android:paddingLeft="15dp"/>





</androidx.constraintlayout.widget.ConstraintLayout>